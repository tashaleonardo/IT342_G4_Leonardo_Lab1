package com.leonardo.backend.repository;

import com.leonardo.backend.model.Artist;
import com.leonardo.backend.model.User;
import org.springframework.data.jpa.repository.JpaRepository;

import java.util.List;
import java.util.Optional;

public interface ArtistRepository extends JpaRepository<Artist, Long> {

    // Find artist by linked user (for profile page)
    Optional<Artist> findByUser(User user);

    // Get all artists ordered by experience (for dashboard/guest browsing)
    List<Artist> findAllByOrderByYearsOfExperienceDesc();

    // Find artist by user's email (convenient for auth)
    Optional<Artist> findByUser_Email(String email);
}
